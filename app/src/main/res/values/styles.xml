<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppThemeDark" parent="Theme.AppCompat" />

    <style name="LoginTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">#5eba2d</item>
        <item name="colorPrimaryDark">#4B9623</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BottomNav" parent="LoginTheme">
        <item name="android:colorPrimaryDark">#888</item>
    </style>

    <style name="NavigationItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="StatusButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/room_status_available</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="AvailableButton" parent="StatusButton">
        <item name="android:textColor">@color/room_status_available</item>
    </style>

    <style name="ReservedButton" parent="StatusButton">
        <item name="android:textColor">@color/room_status_reserved</item>
    </style>

    <style name="UnavailableButton" parent="StatusButton">
        <item name="android:textColor">@color/room_status_unavailable</item>
    </style>

    <style name="TextStep" parent="TextAppearance.AppCompat">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/state_list_step_circle</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="TextStepDescription" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">12dp</item>
    </style>

</resources>
