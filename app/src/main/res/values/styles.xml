<resources>


    <style name="AppTheme" parent="Theme.AppCompat" />

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar" />

    <style name="BottomNav" parent="AppThemeDark">
        <item name="android:colorPrimaryDark">#888</item>
    </style>

    <style name="NavigationItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="StatusButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/room_status_available</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="AvailableButton" parent="StatusButton">
        <item name="android:textColor">@color/room_status_available</item>
    </style>

    <style name="ReservedButton" parent="StatusButton">
        <item name="android:textColor">@color/room_status_reserved</item>
    </style>

    <style name="UnavailableButton" parent="StatusButton">
        <item name="android:textColor">@color/room_status_unavailable</item>
    </style>

</resources>
