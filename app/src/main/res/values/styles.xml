<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar" />

    <style name="ReserveButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_white_rounded_corners</item>
        <item name="android:textColor">#222</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="BottomNav" parent="AppThemeDark">
        <item name="android:colorPrimaryDark">#888</item>
    </style>

    <style name="NavigationItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

</resources>
